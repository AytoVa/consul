<h2 class="inline-block"><%= t("admin.physical_final_votes.index.title") %></h2>

<%= link_to t("admin.physical_final_votes.index.new"), new_admin_physical_final_vote_path,
            class: "button success float-right" %>

<% if @physical_final_votes.any? %>
  <table>
    <tr>
      <th><%= t("admin.physical_final_votes.name") %></th>
      <th><%= t("admin.physical_final_votes.booth") %></th>
      <th><%= t("admin.physical_final_votes.total_votes") %></th>
      <th><%= t("admin.physical_final_votes.created_at") %></th>
    </tr>
    <% @physical_final_votes.each do |physical_final_vote| %>
      <tr id="<%= dom_id(physical_final_vote) %>" class="physical_final_vote">
        <td>
          <%= link_to physical_final_vote.name, [:admin, physical_final_vote] %>
        </td>
        <td>
          <%= physical_final_vote.booth %>
        </td>
        <td>
          <%= physical_final_vote.total_votes %>
        </td>
        <td>
          <%= l(physical_final_vote.created_at, format: :short) %>
        </td>
      </tr>
    <% end %>
  </table>
<% else %>
  <div class="callout primary margin-top">
    <%= t("admin.physical_final_votes.no_physical_final_votes") %>
  </div>
<% end %>
