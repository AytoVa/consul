<%= link_to "< Volver", admin_physical_final_votes_path %>

<h2><%= t("admin.physical_final_votes.new.title") %></h2>

<%= form_for [:admin, @physical_final_vote] do |f| %>
  <%= render 'shared/errors',
              resource: @physical_final_vote %>
  <input type="hidden" name="physical_final_vote[signable_type]" id="physical_final_vote_signable_type" value="Budget::Investment" readonly="readonly">

  <div class="small-12 medium-6 large-4">
    <%= f.text_field :signable_id, label: t("admin.physical_final_votes.new.signable") %>
  </div>

  <div class="small-12 medium-6 large-4">
    <%= f.text_field :booth, label: t("admin.physical_final_votes.new.booth") %>
  </div>

  <div class="small-12 medium-6 large-4">
    <%= f.number_field :total_votes, label: t("admin.physical_final_votes.new.total_votes") %>
  </div>

  <%= f.submit(class: "button", value: t("admin.physical_final_votes.new.submit")) %>
<% end %>