<div class="small-12 column">
  <table>
    <tr>
      <td>
        <%= consultant.name %>
      </td>
      <td>
        <%= consultant.email %>
      </td>
      <td class="text-right">
        <% if consultant.persisted? %>
          <%= link_to t('admin.consultants.consultant.delete'),
            admin_consultant_path(consultant),
            method: :delete,
            class: "button hollow alert"
          %>
        <% else %>
          <%= link_to t('admin.consultants.consultant.add'),{ controller: "admin/consultants", action: :create, user_id: consultant.user_id },
            method: :post, class: "button success" %>
        <% end %>
      </td>
    </tr>
  </table>
</div>
